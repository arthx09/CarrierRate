@model Entities.Models.tbRate

@{
    ViewBag.Title = "Rate register";
}

<div class="box box-default">
    <div class="box-header with-border">
    </div>
    <div class="box-body">
        @using (Html.BeginForm("New", "Rate", new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            if (TempData["Exists"] != null && (bool)TempData["Exists"])
            {
                <div class="divmsg">
                    <div class="alert alert-danger" role="alert">
                        @TempData["Message"].ToString()
                    </div>
                </div>
            }
            <div class="row">
                @Html.LabelFor(model => model.IdCarrier, new { @class = "col-md-1 col-md-offset-3 control-label " })
                <div class="col-md-4">
                    @Html.DropDownListFor(t => t.IdCarrier, TempData["carriers"] as IEnumerable<SelectListItem>, "Selecione", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdCarrier)
                </div>
            </div>
            <br>
            <div class="row">
                @Html.LabelFor(model => model.Rate, new { @class = "col-md-1 col-md-offset-3 control-label " })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Rate, new { @type = "text", @class = "form-control", maxlength = 7})
                    @Html.ValidationMessageFor(model => model.Rate)
                </div>
            </div>
            <hr>
            <div class="form-actions text-center">
                <button class="btn btn-success " type="submit"><i class="icon-ok"></i>Salvar</button>
                <a class="btn btn-default " href="@Url.Content("~/Rate/Index")" ;">Cancelar</a>
            </div>
        }
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {
            $('#Rate').maskMoney({ thousands: "" });
        });
    </script>
}