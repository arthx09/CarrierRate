@model Entities.Models.tbCarrier

@{
    ViewBag.Title = "Carrier edit";
}

<div class="box box-default">
    <div class="box-header with-border">
    </div>
    <div class="box-body">
        @using (Html.BeginForm("Edit", "Carrier", new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            if (TempData["Exists"] != null && (bool)TempData["Exists"])
            {
                <div class="divmsg">
                    <div class="alert alert-danger" role="alert">
                        @TempData["Message"].ToString()
                    </div>
                </div>
            }
            <div class="row">
                @Html.LabelFor(model => model.Name, new { @class = "col-md-1 col-md-offset-3 control-label " })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Name, new { @type = "text", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <br />
            <div class="row">
                @Html.LabelFor(model => model.NickName, new { @class = "col-md-1 col-md-offset-3 control-label " })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.NickName, new { @type = "text", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NickName)
                </div>
            </div>
            <br />
            <div class="row">
                @Html.LabelFor(model => model.Status, new { @class = "col-md-1 col-md-offset-3 control-label " })
                <div class="col-md-4">
                    @Html.CheckBoxFor(model => model.Status)
                </div>
            </div>
            <hr>
            <div class="form-actions text-center">
                <button class="btn btn-success " type="submit"><i class="icon-ok"></i>Salvar</button>
                <a class="btn btn-default " href="@Url.Content("~/Carrier/Index")" ;">Cancelar</a>
            </div>
        }
    </div>
</div>
