@using System.Configuration
@using System.Web.Optimization


<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript">
        var baseurl = '@Url.Content("~")'
    </script>
    <meta charset="UTF-8">
    <title>Axado</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="@Url.Content("~/Content/Bootstrap/bootstrap.min.css")" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    @Styles.Render("~/Content/css")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body class="skin-green">

    <div class="wrapper">
        <div class="main-header">
            <a href="@Url.Content("~/Home/Index")" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini">Axado </span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg">Axado</span>
            </a>
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown">
                                <span>@HttpContext.Current.User.Identity.Name.Split('|')[1]&nbsp;<i class="fa fa-caret-down"></i></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Content("~/Account/Logout")"><i class="fa fa-sign-out"></i>Logout</a>
                                </li>

                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="main-sidebar">
            <div class="sidebar">
                <div class="user-panel">
                    <div class="pull-left image">
                    </div>
                    <div class="pull-left info">
                        <p id="sidebar-name-user">@HttpContext.Current.User.Identity.Name.Split('|')[1]</p>
                    </div>
                </div>
                <ul class="sidebar-menu">
                    <li>
                        <a href="@Url.Content("~/Carrier/Index")">
                            <span>Carrier</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Content("~/Rate/Index")">
                            <span>Rate</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="content-wrapper">
            <div class="content-header">
                <h1>
                    @ViewBag.Title
                </h1>
                <ol class="breadcrumb">
                    <li><a href="@Url.Content("~/Home/Index")"><i class="fa fa-home"></i> Principal</a></li>
                    <li class="active">@ViewContext.RouteData.Values["controller"].ToString()</li>
                </ol>
            </div>
            <div class="content">
                <div style="position:relative;">
                    @RenderBody()
                </div>
            </div>

        </div>
    </div>
    <script src="@Url.Content("~/Scripts/jQuery-2.1.4.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.mask.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskMoney.min.js")"></script>
    <script src="@Url.Content("~/Scripts/fastclick.min.js")"></script>
    <script src="@Url.Content("~/Scripts/app.min.js")"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
